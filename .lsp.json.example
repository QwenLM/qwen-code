{
  "_comment": "Qwen Code LSP Configuration - Copy this file to .lsp.json and customize as needed",

  "typescript": {
    "command": "typescript-language-server",
    "args": ["--stdio"],
    "initializationOptions": {},
    "trustRequired": true
  },

  "javascript": {
    "command": "typescript-language-server",
    "args": ["--stdio"],
    "initializationOptions": {},
    "trustRequired": true
  },

  "python": {
    "command": "pylsp",
    "args": [],
    "initializationOptions": {},
    "trustRequired": true
  },

  "go": {
    "command": "gopls",
    "args": [],
    "initializationOptions": {},
    "trustRequired": true
  },

  "java": {
    "command": "jdtls",
    "args": [
      "-configuration", "~/.cache/jdtls",
      "-data", ".jdtls-workspace"
    ],
    "initializationOptions": {
      "workspaceFolders": ["${workspacePath}"],
      "settings": {
        "java": {
          "format": {
            "enabled": true
          },
          "saveActions": {
            "organizeImports": true
          }
        }
      }
    },
    "trustRequired": true
  },

  "cpp": {
    "command": "clangd",
    "args": [
      "--background-index",
      "--clang-tidy",
      "--header-insertion=iwyu",
      "--completion-style=detailed"
    ],
    "initializationOptions": {
      "clangdFileStatus": true,
      "usePlaceholders": true,
      "completeUnimported": true
    },
    "trustRequired": true
  },

  "c": {
    "command": "clangd",
    "args": [
      "--background-index",
      "--clang-tidy",
      "--header-insertion=iwyu"
    ],
    "initializationOptions": {},
    "trustRequired": true
  },

  "rust": {
    "command": "rust-analyzer",
    "args": [],
    "initializationOptions": {},
    "trustRequired": true
  }
}

# Quebec Electrical Agents - Backend Configuration

# Server
PORT=8000
HOST=0.0.0.0

# AI API Keys (choose one or both)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database (optional - using file system by default)
DATABASE_URL=postgresql://user:password@localhost:5432/quebec_electrical

# Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/webapp_backend.log

# CORS
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Python
PYTHON_PATH=python3

# OCR (Tesseract)
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=fra+eng

# FAISS
FAISS_INDEX_PATH=./data/knowledge_index.faiss
FAISS_METADATA_PATH=./data/knowledge_metadata.pkl
